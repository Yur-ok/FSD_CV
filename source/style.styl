  .software .block-header__img
    margin: 0

  .software .block-header__title
    margin: 0

  .software .block-header__line
    width: 95%

  tbody
    display: flex
    flex-wrap wrap
    flex-direction: column

  .software__table
    width: 100%

  .software__table td
    display: inline
