@font-face
  font-family: 'MyriadPro-Bold';
  src: url('./fonts/MyriadPro-Bold.woff') format('woff');

@font-face
  font-family: 'MyriadPro-Regular';
  src: url('./fonts/MyriadPro-Regular.woff') format('woff');

@font-face
  font-family: 'MyriadPro-LightSemiExt';
  src: url('./fonts/MyriadPro-LightSemiExt.woff') format('woff');

body
  margin: 0 auto
  background-color: #ddd

//
// Common rules
//
p
  margin: 0

ul
  list-style-type: none
  margin: 0
  padding: 0

.block-header__items
  display: flex
  align-items: center

.block-header__img
  background-size: 100%
  background-repeat: no-repeat

.block-header__title
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  text-transform: uppercase
  font-size: 29px
  letter-spacing: -1px

.block-header__title > h2
  margin: 0

.block-header__line
  background-color: #006cb4
  height: 5px


//@media (max-width: 2560px)
  main
    margin: 0 auto
    background-color: #fff
    width: 1280px
    height: 1811px
    padding-top: 78px
    padding-left: 63px
    padding-right: 59px
    padding-bottom: 98px
    box-sizing: border-box
    display: flex

  .first-col
    margin-right: 80px

  //.second-col

  //
  //first block BIO
  //
  .bio
    display: flex
    width: 425px
    flex-direction column
    align-items: center

  .big-photo
    margin-left: 20px
    margin-top: 28px
    width: 209px
    height: 209px
    border-radius 50%
    background-color: #006cb4
    box-shadow: 0 0 0 14px #fff, 0 0 0 16px #006cb4

  .full-name__list > li > h2
    margin: 0

  .full-name__list
    margin-top: 41px
    margin-left: 14px;
    text-align: center;
    list-style-type: none
    white-space: nowrap

  .full-name__name
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 37px
    letter-spacing: 0.5px
    text-transform: uppercase

  .full-name__surname
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 43px
    text-transform: uppercase;
    line-height: 44px
    letter-spacing: -1px

  .full-name__position
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    text-transform: uppercase
    line-height: 62px
    font-size: 18px
    letter-spacing: -1.4px

  //
  //second block Profile
  //
  .profile
    width: 425px
    margin-top: 63px

  .profile .block-header__img
    background-image: url("../img/PROFILE.png")
    width: 77px
    height: 74px
    margin-right: 10px;

  .profile .block-header__title
    margin-right: 10px

  .profile .block-header__line
    width: 173px

  .profile__description
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    margin-top: 13px
    width: 425px
    line-height: 1.2

  .profile__description--bold
    font-weight: bold;

  //
  //third block Contact
  //
  .contact
    width: 425px
    margin-top: 45px

  .contact .block-header__img
    background-image: url('../img/Phone.png')
    width: 74px
    height: 74px
    margin-right: 14px

  .contact .block-header__title
    margin-right: 8px

  .contact .block-header__line
    width: 153px

  .contact__table
    border-collapse: collapse
    margin-top: 18px
    margin-left: -1.1px;
    text-align: left
    vertical-align: top

  .contact__table th
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 22px
    color: #006cb4
    text-transform: uppercase
    width: 131px
    letter-spacing: -0.5px

  .contact__table td
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 22px
    letter-spacing: -0.4px

  .contact__table tr
    height: 56px

  //
  //fourth block Skills
  //
  .skills
    oreder: 6
    margin-top: 34px
    width: 425px

  .skills .block-header__img
    background-image: url('../img/SKILLS.png')
    height: 74px;
    width: 74px;
    margin-right: 10px

  .skills .block-header__title
    margin-right: 15px

  .skills .block-header__line
    width: 199px

  .skill__header > h3
    margin-top: 0
    margin-bottom: 8px

  .skills__list
    display: flex
    flex-direction: column
    margin-top: 22px
    height: 286px
    justify-content: space-between
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 23px
    text-transform: uppercase

  .skills__description
    height: 51px
    text-align: center
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: center

  .skill__level-point
    display: flex

  .empty-point
    width: 18px
    height: 18px
    border-radius: 50%
    background-color: #e7e7e7
    margin-right: 10px

  .fill-point
    background-color: #006cb4

  //
  //fifth block Education
  //
  .education
    width: 652px

  .education .block-header__img
    background-image: url('../img/EDUCATION.png')
    width: 77px
    height: 74px
    margin-right: 19px

  .education .block-header__title
    margin-right: 10px

  .education .block-header__line
    width: 321px

  .education__item::before
    content: ''

    position: absolute
    left: -41px
    top: 7px

    width: 20px
    height: 20px
    border-radius: 50%
    background-color: #000

  .education__list
    margin-top: 26px
    padding-left: 54px

  .education__item
    position: relative
    margin-bottom: 11px

  .education__item:nth-child(2)
    margin-bottom: 9px

  .education__item:nth-child(3)
    margin-bottom: 9px

  .education__item-header--bold
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 30px
    letter-spacing: -2.3px
    text-transform: uppercase

  .education__item--addText
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 27px

  //letter-spacing: -1.3px
  .education__item--upper
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    text-transform: uppercase
    font-size: 27px
    letter-spacing: -0.6px

  .education__item-description
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    margin-top: 5px
    font-size: 16px

  //
  //sixth block Experience
  //
  .experience
    width: 652px
    margin-top: 51px

  .experience .block-header__img
    background-image: url('../img/EXPERIENCE.png')
    width: 79px
    height: 77px
    margin-right: 18px

  .experience .block-header__title
    margin-right: 4px

  .experience .block-header__line
    width: 321px

  .experience__list
    padding-left: 54px
    margin-top: 41px

  .experience__item-header
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 27px
    text-transform: uppercase
    letter-spacing: -0.4px

  .experience__item--addText
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 27px
    text-transform: none

  .experience__item--upper
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    text-transform: uppercase
    font-size: 27px
    margin-top: 3px
    letter-spacing: -0.5px

  .experience__item-description
    margin-top: 4px
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 16px

  .experience__list-item
    position: relative
    margin-bottom: 13px

  //.experience__list-item br
  //  display: none;

  .experience__list-item:nth-child(2)
    margin-bottom: 13px

  .experience__list-item > li::before
    content: ''

    position: absolute
    top: 7px
    left: -41px

    width: 20px
    height: 20px
    border-radius: 50%
    background-color: #000;

  //
  //seventh block Software
  //
  .software
    width: 652px
    margin-top: 55px

  .software .block-header__img
    background-image: url('../img/SOFTWARE.png')
    width: 77px
    height: 74px
    margin-right: 20px

  .software .block-header__title
    margin-right: 27px

  .software .block-header__line
    width: 321px

  .software__table
    border-collapse: collapse
    width: 644px
    margin-left: 6px
    margin-top: 25px

  .software__table tr
    height: 45px
    vertical-align: top

  .software__table .col-1
    width: 100%

  .software__table h3
    margin: 0
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 27px
    text-transform: uppercase
    letter-spacing: -0.2px

  .software__progress-empty
    width: 285px
    height: 23px
    background-color: #e7e7e7

  .photoshop
    background-color: #006cb4
    width: 260px
    height: 23px

  .dreamweaver
    background-color: #006cb4
    width: 237px
    height: 23px

  .illustrator
    background-color: #006cb4
    width: 201px
    height: 23px

  .ae
    background-color: #006cb4
    width: 176px
    height: 23px

  .indesign
    background-color: #006cb4
    width: 162px
    height: 23px

  .html
    background-color: #006cb4
    width: 260px
    height: 23px

@media (max-width: 768px)

  main
    width: 768px
    height: auto
    padding-top: 20px
    flex-flow flex wrap
    flex-direction: column

  .first-col
    margin: 0

  .second-col
    margin-top: 60px

  .bio
    width: auto

  .profile
    width: auto;

  .profile .block-header__line
    width: 395px;

  .profile__description
    width: auto;
    margin-left: 20px
    text-align: justify;
    font-size: 17px

  .contact
    width: auto;

  .contact .block-header__line
    width: 373px

  .contact__table
    margin: 0 auto;

  .contact__table td
    font-size: 30px

  .contact__table th
    font-size: 30px
    width: 180px

  .skills
    width: auto;

  .skills .block-header__line
    width: 423px

  .empty-point
    width: 25px
    height: 25px

  .education .block-header__line
    width: 318px

  .education__item-description
    font-size: 17px
    text-align: justify

  .experience .block-header__line
    width: 318px;

  .experience__item-description
    font-size: 17px
    text-align: justify

  .software .block-header__line
    width: 314px

  .software__table .col-1
    width: 54%

