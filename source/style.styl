@font-face
  font-family: 'MyriadPro-Bold';
  src: url('./fonts/MyriadPro-Bold.woff') format('woff');

@font-face
  font-family: 'MyriadPro-Regular';
  src: url('./fonts/MyriadPro-Regular.woff') format('woff');

@font-face
  font-family: 'MyriadPro-LightSemiExt';
  src: url('./fonts/MyriadPro-LightSemiExt.woff') format('woff');

body
  margin: 0 auto
  padding-top: 78px
  margin-left: 63px
  margin-right: 59px

  main
    max-height: 1811px
    max-width: 1280px
    display: flex
    flex-direction: column
    flex-wrap: wrap
    //justify-content: space-between


  // Common rules
  //
  p
    margin: 0

  ul
    list-style-type: none
    margin: 0
    padding: 0

  .block-header__items
    display: flex
    align-items: center

  .block-header__img
    background-size: 100%
    background-repeat: no-repeat

  .block-header__title
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    text-transform: uppercase
    font-size: 29px
    letter-spacing: -1px

  .block-header__title > h2
    margin: 0

  .block-header__line
    background-color: #006cb4
    height: 5px

  //
  //first block BIO
  //
  .bio
    display: flex
    //max-width: 38%
    width: 425px
    flex-direction column
    align-items: center
    background-color: greenyellow

  .big-photo
    margin-left: 17px
    margin-top: 28px
    width: 209px
    height: 209px
    border-radius 50%
    background-color: #006cb4
    box-shadow: 0 0 0 14px #fff, 0 0 0 16px #006cb4

  .full-name__list > li > h2
    margin: 0

  .full-name__list
    margin-top: 41px
    margin-left: 14px;
    text-align: center;
    list-style-type: none
    white-space: nowrap

  .full-name__name
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 37px
    letter-spacing: 0.5px
    text-transform: uppercase

  .full-name__surname
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 43px
    text-transform: uppercase;
    line-height: 44px
    letter-spacing: -1px

  .full-name__position
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    text-transform: uppercase
    line-height: 62px
    font-size: 18px
    letter-spacing: -1.4px

  //
  //second block Profile
  //
  .profile
    background-color: greenyellow
    //max-width: 38%
    width: 425px
    margin-top: 62px

  .profile .block-header__img
    background-image: url("../img/PROFILE.png")
    width: 77px
    height: 74px
    margin-right: 9px;

  .profile .block-header__title
    margin-right: 9px

  .profile .block-header__line
    width: 173px

  .profile__description
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    margin-top: 13px
    width: 425px
    line-height: 1.2

  .profile__description--bold
    font-weight: bold;

  //
  //third block Contact
  //
  .contact
    //max-width: 38%
    width: 425px
    margin-top: 53px
    background-color: greenyellow

  .contact .block-header__img
    background-image: url('../img/Phone.png')
    width: 74px
    height: 74px
    margin-right: 12px

  .contact .block-header__title
    margin-right: 7px

  .contact .block-header__line
    width: 153px

  .contact__table
    border-collapse: collapse
    margin-top: 18px
    margin-left: -1.1px;
    text-align: left
    vertical-align: top

  th
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 22px
    color: #006cb4
    text-transform: uppercase
    width: 131px
    letter-spacing: -0.5px

  td
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 22px
    letter-spacing: -0.4px

  tr
    height: 56px

  //
  //fourth block Skills
  //
  .skills
    margin-top: 33px
    //max-width: 38%
    width: 425px
    background-color: greenyellow

  .skills .block-header__img
    background-image: url('../img/SKILLS.png')
    height: 74px;
    width: 74px;
    margin-right: 10px

  .skills .block-header__title
    margin-right: 15px

  .skills .block-header__line
    width: 199px

  .skill__header > h3
    margin-top: 0
    margin-bottom: 8px

  .skills__list
    display: flex
    flex-direction: column
    margin-top: 22px
    height: 286px
    justify-content: space-between
    font-size: 23px
    text-transform: uppercase
    padding-bottom: 106px

  .skills__description
    height: 51px
    text-align: center
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: center


  .skill__level-point
    display: flex

  .empty-point
    width: 18px
    height: 18px
    border-radius: 50%
    background-color: #e7e7e7
    margin-right: 10px

  .fill-point
    background-color: #006cb4


  //
  //fifth block Education
  //
  .education
    background-color: greenyellow
    //max-width: 56%
    width: 652px
    margin-left: 80px

  .education .block-header__img
    background-image: url('../img/EDUCATION.png')
    width: 77px
    height: 74px
    margin-right: 20px

  .education .block-header__title
    margin-right: 10px

  .education .block-header__line
    width: 321px

  .education__item::before
    content: ''

    position: absolute
    left: 12px
    top: 7px

    width: 20px
    height: 20px
    border-radius: 50%
    background-color: #000


  .education__list
    margin-top: 26px
    padding-left: 54px
    position: relative

  .education__item
    margin-bottom: 11px

  .education__item:nth-child(2)
    margin-bottom: 9px

  .education__item:nth-child(3)
    margin-bottom: 8px

  .education__item-header--bold
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 30px
    letter-spacing: -2.3px
    text-transform: uppercase

  .education__item--addText
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 30px
    letter-spacing: -1.3px

  .education__item--upper
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    text-transform: uppercase
    font-size: 27px
    letter-spacing: -0.6px

  .education__item-description
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    margin-top: 5px
    font-size: 16px


  //
  //sixth block Experience
  //
  .experience
    background-color: greenyellow
    //max-width: 56%
    width: 652px
    margin-top: 41px
    margin-left: 80px

  .experience .block-header__img
    background-image: url('../img/EXPERIENCE.png')
    width: 79px
    height: 77px
    margin-right: 18px

  .experience .block-header__title
    margin-right: 4px

  .experience .block-header__line
    width: 321px

  .experience__list
    padding-left: 54px
    margin-top: 41px
    position: relative

  .experience__item-header
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 27px
    text-transform: uppercase
    letter-spacing: -0.4px

  .experience__item--addText
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 27px
    text-transform: none

  .experience__item--upper
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    text-transform: uppercase
    font-size: 27px
    margin-top: 3px
    letter-spacing: -0.5px

  .experience__item-description
    margin-top: 4px

  .experience__list-item
    margin-bottom: 12px

  .experience__list-item:nth-child(2)
    margin-bottom: 14px

  .experience__list-item > li::before
    content: ''

    position: absolute
    top: 7px
    left: 12px

    width: 20px
    height: 20px
    border-radius: 50%
    background-color: #000;



  //
  //seventh block Software
  //
  .software
    background-color: greenyellow
    width: 652px
    margin-top: 42px
    margin-left: 80px
    //max-width: 56%

  .software .block-header__img
    background-image: url('../img/SOFTWARE.png')
    width: 77px
    height: 74px
    margin-right: 19px

  .software .block-header__title
    margin-right: 25px

  .software .block-header__line
    width: 321px


  .software__table
    background-color: red;
    border-collapse: collapse
    width: 644px
    margin-left: 6px
    margin-top: 16px


  .software__table td h3
    margin: 0
    letter-spacing: 0.5px

  .software__item-header
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 27px
    text-transform: uppercase

  .software__progress-empty
    width: 285px
    height: 23px
    background-color: #e7e7e7

