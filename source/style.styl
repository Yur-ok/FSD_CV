@font-face
  font-family: 'MyriadPro-Bold';
  src: url('./fonts/MyriadPro-Bold.woff') format('woff');

@font-face
  font-family: 'MyriadPro-Regular';
  src: url('./fonts/MyriadPro-Regular.woff') format('woff');

@font-face
  font-family: 'MyriadPro-LightSemiExt';
  src: url('./fonts/MyriadPro-LightSemiExt.woff') format('woff');

body
  margin: 0 auto
  max-width: 1280px
  padding-top: 78px;
  //
  // Common rules
  //
  p
    margin: 0

  ul
    list-style-type: none
    margin: 0
    padding: 0

  .block-header__items
    display: flex
    align-items: center

  .block-header__img
    background-size: 100%
    background-repeat: no-repeat

  .block-header__title
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    text-transform: uppercase
    font-size: 29px
    letter-spacing: -1px

  .block-header__title > h2
    margin: 0

  .block-header__line
    background-color: #006cb4
    height: 5px

  //
  //first block BIO
  //
  .bio
    margin-left: 63px
    display: flex
    max-width: 36%
    flex-direction column
    align-items: center
    background-color: greenyellow

  .big-photo
    margin-left: 17px
    margin-top: 28px
    width: 209px
    height: 209px
    border-radius 50%
    background-color: #006cb4
    box-shadow: 0 0 0 14px #fff,
            0 0 0 16px #006cb4

  .full-name__list > li > h2
    margin: 0

  .full-name__list
    margin-top: 41px
    margin-left: 14px;
    text-align: center;
    list-style-type: none
    white-space: nowrap

  .full-name__name
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 37px
    letter-spacing: 0.5px
    text-transform: uppercase

  .full-name__surname
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 43px
    text-transform: uppercase;
    line-height: 44px
    letter-spacing: -1px

  .full-name__position
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    text-transform: uppercase
    line-height: 62px
    font-size: 18px
    letter-spacing: -1.4px

  //
  //second block Profile
  //
  .profile
    background-color: greenyellow
    max-width: 36%
    margin-left: 63px
    margin-top: 62px

  .profile .block-header__img
    background-image: url("../img/PROFILE.png")
    width: 77px
    height: 74px
    margin-right: 9px;

  .profile .block-header__title
    margin-right: 9px

  .profile .block-header__line
    //border-bottom: 3px transparent solid
    width: 173px

  .profile__description
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    margin-top: 13px
    width: 425px
    line-height: 1.2

  .profile__description--bold
    font-weight: bold;

  //
  //third block Contact
  //
  .contact
    max-width: 36%
    margin-top: 53px
    margin-left: 63px
    background-color: greenyellow

  .contact .block-header__img
    background-image: url('../img/Phone.png')
    width: 74px
    height: 74px
    margin-right: 12px

  .contact .block-header__title
    margin-right: 7px

  .contact .block-header__line
    width: 153px

  .contact__table
    border-collapse: collapse
    margin-top: 18px
    margin-left: -1.1px;
    text-align: left
    vertical-align: top

  th
    font-family: 'MyriadPro-Bold', Arial, sans-serif;
    font-size: 22px
    color: #006cb4
    text-transform: uppercase
    width: 131px
    letter-spacing: -0.5px

  td
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 22px
    letter-spacing: -0.4px

  tr
    height: 56px

  //
  //fourth block Skills
  //
  .skills
    margin-top: 33px
    margin-left: 63px
    max-width: 36%
    background-color: greenyellow

  .skills .block-header__img
    background-image: url('../img/SKILLS.png')
    height: 74px;
    width: 74px;
    margin-right: 10px

  .skills .block-header__title
    margin-right: 15px

  .skills .block-header__line
    width: 199px

  .skill__header > h3
    margin-top: 0
    margin-bottom: 8px

  .skills__list
    display: flex
    flex-direction: column
    margin-top: 22px
    height: 286px
    justify-content: space-between
    font-family: 'MyriadPro-Regular', Arial, sans-serif;
    font-size: 23px
    text-transform: uppercase
    padding-bottom: 106px

  .skills__description
    height: 51px
    text-align: center
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: center


  .skill__level-point
    display: flex

  .empty-point
    width: 18px
    height: 18px
    border-radius: 50%
    background-color: #e7e7e7
    margin-right: 10px

  .fill-point
    background-color: #006cb4


  //
  //fifth block Education
  //
  .education__item-header--bold
    font-weight: bold;

  .education__item--upper
    text-transform: none;