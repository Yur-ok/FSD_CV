  .profile .block-header__line
    width: 95%

  .contact
    margin-top: 50px

  .contact .block-header__img
    margin: 0

  .contact .block-header__title
    margin: 0

  .contact .block-header__line
    width: 95%

  .contact__table tr
    height: 40px

  .contact__table th
    font-size: 20px
    width: 100px

  .contact__table td
    font-size: 20px

  .skills
    margin-top: 50px

  .skills .block-header__img
    margin: 0

  .skills .block-header__title
    margin: 0

  .skills .block-header__line
    width: 95%

  .skills__list
    font-size: 18px

  .skills__description
    justify-content: unset

  .empty-point
    width: 15px
    height: 15px
    margin-right: 7px

  .education
    width: auto

  .education .block-header__img
    margin: 0

  .education .block-header__title
    margin: 0

  .education .block-header__line
    width: 95%

  .education__list
    padding-left: 30px

  .education__item::before
    left: -23px
    top: 12px

    width: 11px
    height: 11px

  .education__item-description
    margin-right: 5px

  .experience
    width: 100%
    margin-top: 50px

  .experience .block-header__img
    margin: 0

  .experience .block-header__title
    margin: 0

  .experience .block-header__line
    width: 95%

  .experience__list
    margin-top: 26px
    padding-left: 30px

  .experience__list-item >li::before
    left: -23px
