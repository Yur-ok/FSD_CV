@font-face
  font-family: 'MyriadPro-Bold';
  src: url('./fonts/MyriadPro-Bold.woff') format('woff');

@font-face
  font-family: 'MyriadPro-Regular';
  src: url('./fonts/MyriadPro-Regular.woff') format('woff');

@font-face
  font-family: 'MyriadPro-LightSemiExt';
  src: url('./fonts/MyriadPro-LightSemiExt.woff') format('woff');

body
  margin: 0
  background-color: #ddd
  display: flex;
  justify-content: center;

//
// Common rules
//
p
  margin: 0

ul
  list-style-type: none
  margin: 0
  padding: 0

.block-header__items
  display: flex
  align-items: center

.block-header__img
  background-size: cover
  background-repeat: no-repeat
  flex-shrink 0

.block-header__title
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  text-transform: uppercase
  font-size: 29px
  letter-spacing: -1px
  & > h2
    margin: 0

.block-header__line
  background-color: #006cb4
  height: 5px
  width: 5px
  flex-grow 1

//@media (min-width: 1024px)

main
  //margin: 0 auto
  background-color: #fff
  width: 1280px
  //padding-top: 78px
  padding-top: 4.1%
  //padding-left: 63px
  padding-left: 3.3%
  //padding-right: 59px
  padding-right: 3.1%
  //padding-bottom: 75px
  padding-bottom: 3.4%
  box-sizing: border-box
  display: flex
  flex: 0 1 auto
  flex-flow row wrap
  justify-content: space-between;

.first-col
  //background-color: blueviolet
  width: 425px
  margin-right: 20px

  //width: 36.8%
  //display: flex
  flex: 0 0 auto
  flex-wrap wrap

//margin-right: 7%
//margin-right: 80px

.second-col
  //background-color: firebrick
  width: 652px
  flex: 0 1 auto

section
  //flex: 0 1 auto
  //width: 56.4%
  //
  //first block BIO
  //
.bio
  //flex-grow: 1
  display: flex
  flex-wrap wrap
  justify-content: center
  padding-left: 4.5%

//padding-left: 19px

.big-photo
  margin-top: 28px
  width: 209px
  height: 209px
  border-radius 50%
  background-color: #006cb4
  box-shadow: 0 0 0 14px #fff, 0 0 0 16px #006cb4

.full-name__list > li > h2
  margin: 0

.full-name__list
  margin-top: 40px
  list-style-type: none
  white-space: nowrap

.full-name__name
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 37px
  letter-spacing: 0.5px
  text-transform: uppercase

.full-name__surname
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  font-size: 43px
  text-transform: uppercase;
  line-height: 44px
  letter-spacing: -1px

.full-name__position
  text-align: center
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  text-transform: uppercase
  line-height: 62px
  font-size: 18px
  letter-spacing: -1.4px

//
//second block Profile
//
.profile
  //width: 425px
  flex-grow: 1
  margin-top: 63px

.profile .block-header__img
  background-image: url("../img/PROFILE.png")
  width: 77px
  height: 74px
  margin-right: 10px;

.profile .block-header__title
  margin-right: 11px

//.profile .block-header__line

.profile__description
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  margin-top: 13px
  //width: 425px
  line-height: 1.2

  span
    font-weight: bold;

//
//third block Contact
//
.contact
  //flex-grow: 1
  margin-top: 48px
  display: flex
  flex-flow column wrap

.contact .block-header__img
  background-image: url('../img/Phone.png')
  width: 74px
  height: 74px
  margin-right: 14px

.contact .block-header__title
  margin-right: 9px

.contact__table
  border-collapse: collapse
  margin-top: 18px
  margin-left: -1.1px;
  text-align: left
  vertical-align: top

.contact__table th
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  font-size: 22px
  color: #006cb4
  text-transform: uppercase
  width: 131px
  letter-spacing: -0.5px

.contact__table td
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 22px
  letter-spacing: -0.4px

.contact__table tr
  height: 56px

//
//fourth block Skills
//
.skills
  margin-top: 34px

//width: 425px

.skills .block-header__img
  background-image: url('../img/SKILLS.png')
  height: 74px;
  width: 74px;
  margin-right: 10px

.skills .block-header__title
  margin-right: 15px

.skill__header > h3
  margin-top: 0
  margin-bottom: 8px

.skills__list
  display: flex
  flex-direction: column
  justify-content: space-between
  margin-top: 22px
  height: 286px
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 23px
  text-transform: uppercase

.skills__description
  height: 51px
  text-align: center
  display: flex
  flex-direction: column
  align-items: center

.skill__level-point
  width: 331px
  display: flex
  flex: initial
  justify-content: space-between

.empty-point
  width: 18px
  height: 18px
  border-radius: 50%
  background-color: #e7e7e7

//margin-right: 10px

.fill-point
  background-color: #006cb4

//
//fifth block Education
//
.education
  //width: 652px
.education .block-header__img
  background-image: url('../img/EDUCATION.png')
  width: 77px
  height: 74px
  margin-right: 19px

.education .block-header__title
  margin-right: 10px

//.education .block-header__line
//  width: 321px

.education__item::before
  content: ''

  position: absolute
  left: -41px
  top: 7px

  width: 20px
  height: 20px
  border-radius: 50%
  background-color: #000

.education__list
  margin-top: 24px
  padding-left: 54px

.education__item
  position: relative
  margin-bottom: 11px

.education__item:nth-child(2)
  margin-bottom: 9px

.education__item:nth-child(3)
  margin-bottom: 9px

.education__item-header--bold
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  font-size: 30px
  letter-spacing: -2.3px
  text-transform: uppercase

.education__item--addText
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 27px

.education__item--upper
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  text-transform: uppercase
  font-size: 27px
  letter-spacing: -0.6px

.education__item-description
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  margin-top: 5px
  font-size: 16px

//
//sixth block Experience
//
.experience
  //width: 652px
  margin-top: 53px

.experience .block-header__img
  background-image: url('../img/EXPERIENCE.png')
  width: 79px
  height: 77px
  margin-right: 18px

.experience .block-header__title
  margin-right: 4px

//.experience .block-header__line
//  width: 321px

.experience__list
  padding-left: 54px
  margin-top: 41px

.experience__item-header
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  font-size: 27px
  text-transform: uppercase
  letter-spacing: -0.4px

.experience__item--addText
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 27px
  text-transform: none

.experience__item--upper
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  text-transform: uppercase
  font-size: 27px
  margin-top: 3px
  letter-spacing: -0.5px

.experience__item-description
  margin-top: 4px
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 16px

.experience__list-item
  position: relative
  margin-bottom: 14px

.experience__list-item:nth-child(2)
  margin-bottom: 13px

.experience__list-item > li::before
  content: ''

  position: absolute
  top: 7px
  left: -41px

  width: 20px
  height: 20px
  border-radius: 50%
  background-color: #000;

//
//seventh block Software
//
.software
  //width: 652px
  margin-top: 47px

.software .block-header__img
  background-image: url('../img/SOFTWARE.png')
  width: 77px
  height: 74px
  margin-right: 20px

.software .block-header__title
  margin-right: 27px

.software__table
  border-collapse: collapse
  width: auto
  margin: 25px 6px 0

.software__table tr
  height: 45px
  vertical-align: top

.software__table .col-1
  width: 100%

.software__table h3
  margin: 0
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 27px
  text-transform: uppercase
  letter-spacing: -0.2px

.software__progress-empty
  width: 285px
  height: 23px
  background-color: #e7e7e7

.photoshop
  background-color: #006cb4
  width: 260px
  height: 23px

.dreamweaver
  background-color: #006cb4
  width: 237px
  height: 23px

.illustrator
  background-color: #006cb4
  width: 201px
  height: 23px

.ae
  background-color: #006cb4
  width: 176px
  height: 23px

.indesign
  background-color: #006cb4
  width: 162px
  height: 23px

.html
  background-color: #006cb4
  width: 260px
  height: 23px




@media (max-width: 1187px)

  //common rules

  main
    padding-left: 3%
    padding-right: 3%

  .block-header__items
    flex-flow column wrap

  .profile .block-header__img
  .profile .block-header__title
  .contact .block-header__img
  .contact .block-header__title
  .skills .block-header__img
  .skills .block-header__title
  .education .block-header__img
  .education .block-header__title
  .experience .block-header__img
  .experience .block-header__title
  .software .block-header__img
  .software .block-header__title
    margin: 0

  .block-header__line
    width: 100%

  .first-col
    margin: 0
    width: 100%
    margin-bottom: 50px

  .second-col
    width: 100%

  //end common rules

  .bio
    justify-content: space-evenly

  .big-photo
    margin-right: 20px

  .full-name__list
    align-self center

  .profile__description
    margin: 20px 20px
    text-align: justify

  .contact tbody
    display: flex
    flex-flow row wrap
    justify-content: space-around;
    margin: 0 5%

  .contact tbody tr
    width: 50%

  .software__table .col-1
    width: 60%
    padding-right: 5%

  .software__table
    margin: 25px auto 0



@media (max-width: 715px)

  .bio
    flex-direction: column
    -moz-align-items: center
    -ms-align-items: center
    align-items: center

  .big-photo
    margin-right 0

  .contact__table th
    text-align: right
    padding-right: 10%

  .contact__table td
    width: 50%

  .contact tbody
    margin: 0
    display: table
    width: 100%


  .education__item-description
  .experience__item-description
    text-align: justify


@media (max-width: 663px) and (min-width: 0px)

  body
    background-color: #fff;

  .software__table tr
    display: flex
    flex-direction: column

  .software__table td
    display: block

  .software__table .col-1
    padding-bottom: 240px



