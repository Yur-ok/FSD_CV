.education .block-header__img
  background-image: url('./EDUCATION.png')
  width: 77px
  height: 74px
  margin-right: 19px

.education .block-header__title
  margin-right: 10px

.education__item::before
  content: ''

  position: absolute
  left: -41px
  top: 7px

  width: 20px
  height: 20px
  border-radius: 50%
  background-color: #000

.education__list
  margin-top: 24px
  padding-left: 54px

.education__item
  position: relative
  margin-bottom: 11px

.education__item:nth-child(2)
  margin-bottom: 9px

.education__item:nth-child(3)
  margin-bottom: 9px

.education__item-header--bold
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  font-size: 30px
  letter-spacing: -2.3px
  text-transform: uppercase

.education__item--addText
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 27px

.education__item--upper
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  text-transform: uppercase
  font-size: 27px
  letter-spacing: -0.6px

.education__item-description
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  margin-top: 5px
  font-size: 16px

