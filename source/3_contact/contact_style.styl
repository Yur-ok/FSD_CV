//
//third block Contact
//
.contact
  margin-top: 48px
  display: flex
  flex-flow column wrap

.contact .block-header__img
  background-image: url('./Phone.png')
  width: 74px
  height: 74px
  margin-right: 14px

.contact .block-header__title
  margin-right: 9px

.contact__table
  border-collapse: collapse
  margin-top: 18px
  margin-left: -1.1px;
  text-align: left
  vertical-align: top

.contact__table th
  font-family: 'MyriadPro-Bold', Arial, sans-serif;
  font-size: 22px
  color: #006cb4
  text-transform: uppercase
  width: 131px
  letter-spacing: -0.5px

.contact__table td
  font-family: 'MyriadPro-Regular', Arial, sans-serif;
  font-size: 22px
  letter-spacing: -0.4px

.contact__table tr
  height: 56px

@media (max-width: 1187px)

  .contact tbody
    display: flex
    flex-flow row wrap
    justify-content: space-around;
    margin: 0 5%

  .contact tbody tr
    width: 50%

@media (max-width: 715px)

  .contact__table th
    text-align: right
    padding-right: 10%

  .contact__table td
    width: 50%

  .contact tbody
    margin: 0
    display: table
    width: 100%
